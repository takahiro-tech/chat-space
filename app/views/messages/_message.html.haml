.main-middle__box{"data-message-id": "#{message.id}"}
  .main-middle__box__user
    %p.main-middle__box__user__name
      = message.user.name 
    %p.main-middle__box__user__date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .main-middle__box__message
    - if message.body.present?
      %p.lower-message_body
        = message.body
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?